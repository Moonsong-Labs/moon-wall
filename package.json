{
  "name": "moonwall",
  "version": "1.0.0",
  "description": "Testing framework for the Moon family of projects",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=14.16",
    "pnpm": ">=7"
  },
  "scripts": {
    "build": "rm -rf dist/** && tsc",
    "prepublish": "npm run build",
    "display-reports": "pnpm exec vite preview --base __vitest__ --outDir html",
    "prepare": "npm run build",
    "compile": "rm -rf dist/* && tsc ",
    "start": "npx ts-node ./src/cli/index.ts",
    "lint": "npx prettier --write --ignore-path .gitignore '**/*.(yml|js|ts|json)'",
    "test-bin": "npm run compile && npm run start -- test -f tests/*.ts",
    "new-cmd-js": "npm run compile && DEBUG=smoke* npm run start -- test -t SmokeCopy",
    "bk-new-cmd": "DEBUG=global* npx ts-node ./src/cli/index.ts test -t dev_test",
    "new-cmd": "DEBUG=global* npx ts-node ./src/cli/index.ts test -t new",
    "run-pkg": "DEBUG=global* npx moonwall test -t dev_test"
  },
  "bin": {
    "moonwall": "./dist/cli/index.js"
  },
  "author": "timbrinded",
  "license": "ISC",
  "dependencies": {
    "@acala-network/chopsticks": "^0.4.0",
    "@moonbeam-network/api-augment": "^0.2100.0",
    "@polkadot/api": "^9.14.2",
    "@polkadot/api-augment": "^9.14.2",
    "@polkadot/api-derive": "^9.14.2",
    "@polkadot/keyring": "^10.4.2",
    "@polkadot/types": "^9.14.2",
    "@polkadot/types-codec": "^9.14.2",
    "@polkadot/util": "^10.4.2",
    "@polkadot/util-crypto": "^10.4.2",
    "@types/chai": "^4.3.4",
    "@types/node": "^18.14.0",
    "@types/yargs": "^17.0.22",
    "bottleneck": "^2.19.5",
    "chai": "^4.3.7",
    "chalk": "^5.2.0",
    "clear": "^0.1.0",
    "cli-progress": "^3.12.0",
    "colors": "^1.4.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "esm": "^3.2.25",
    "esm-path": "^1.0.1",
    "ethers": "^6.0.5",
    "fs-extra": "^11.1.0",
    "inquirer": "^8.2.5",
    "inquirer-press-to-continue": "^1.1.4",
    "moment-timezone": "^0.5.40",
    "moonbeam-types-bundle": "^2.0.10",
    "node-fetch": "^3.3.0",
    "prettier": "^2.8.4",
    "semver": "^7.3.8",
    "ts-node": "^10.9.1",
    "vite": "^4.1.4",
    "vitest": "^0.29.1",
    "web3": "4.0.1-alpha.5",
    "web3-core": "^1.8.2",
    "web3-core-helpers": "^1.8.2",
    "web3-core-subscriptions": "^1.8.2",
    "web3-eth": "^1.8.2",
    "web3-types": "0.1.1-alpha.4",
    "ws": "^8.12.1",
    "yaml": "^2.2.1",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.37",
    "@swc/helpers": "^0.4.14",
    "@types/debug": "^4.1.7",
    "@vitest/ui": "^0.28.5",
    "regenerator-runtime": "^0.13.11",
    "typescript": "5.0.0-dev.20230215"
  },
  "pnpm": {
    "overrides": {
      "@polkadot/util": "$@polkadot/util"
    },
    "bin": {
      "moon-wall": "./src/cli/index.ts"
    }
  }
}
