    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.19",
    "@types/yargs": "^17.0.22",
    "bottleneck": "^2.19.5",
    "chai": "^4.3.7",
    "chalk": "^5.2.0",
    "debug": "^4.3.4",
    "ethers": "^6.0.2",
    "mocha": "^10.2.0",
    "moment-timezone": "^0.5.40",
    "prettier": "^2.8.3",
