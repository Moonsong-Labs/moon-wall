{
  "name": "@moonwall/monorepo",
  "type": "module",
  "version": "0.2.0",
  "private": true,
  "packageManager": "pnpm@7.23.0",
  "description": "Testing framework for the Moon family of projects",
  "scripts": {
    "build": "pnpm -r --filter='./packages/**' run build",
    "lint": "pnpm exec prettier --write --ignore-path .gitignore '**/*.(yml|js|ts|json)'",
    "release": "",
    "start": "pnpm exec moonwall",
    "display-reports": "pnpm exec vite preview --base __vitest__ --outDir html",
    "test": "pnpm exec moonwall test 'dev_multi basic chopsticks dev_seq' ",
    "typecheck": "pnpm exec tsc --noEmit"
  },
  "devDependencies": {
    "@acala-network/chopsticks": "^0.5.2",
    "@moonwall/cli": "workspace:*",
    "@moonwall/util": "workspace:*",
    "@polkadot/api": "^10.0.1",
    "@polkadot/api-augment": "^10.0.1",
    "@polkadot/api-derive": "^10.0.1",
    "@polkadot/keyring": "^11.0.1",
    "@polkadot/types": "^10.0.1",
    "@polkadot/types-codec": "^10.0.1",
    "@polkadot/util": "^11.0.1",
    "@polkadot/util-crypto": "^11.0.1",
    "@types/node": "^18.14.6",
    "pnpm": "7.23.0",
    "rimraf": "^4.3.1",
    "typescript": "^4.9.5"
  },
  "pnpm": {
    "overrides": {
      "@moonwall/cli": "workspace:*",
      "@moonwall/util": "workspace:*",
      "@polkadot/util": "$@polkadot/util"
    }
  }
}
