{
  "name": "moonwall",
  "version": "1.0.0",
  "description": "Testing framework for the Moon family of projects",
  "main": "dist/lib/src/index.js",
  "scripts": {
    "compile": "rm -rf dist/lib/* && tsc ",
    "start": "node -r ts-node/register dist/lib/src/cli/index.js",
    "test": "npx ts-node src/cli/runner/lib/execute-test.ts",
    "lint": "npx prettier --write --ignore-path .gitignore '**/*.(yml|js|ts|json)'",
    "test-bin": "npm run compile && npm run start -- test -f tests/*.ts"
  },
  "bin": {
    "moonwall": "dist/lib/src/cli/index.js"
  },
  "author": "",
  "license": "ISC",
