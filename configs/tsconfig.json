{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalSpecifierResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["tests", "moonwall.config*",    "**/dist/**",],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
  }
}
