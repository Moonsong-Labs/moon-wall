{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"include": ["*.js", "*.ts", "*.json", "*.yml", "*.md"],
		"ignore": ["./dist/*", "./node_modules/*"]
	},
	"organizeImports": {
		"enabled": false
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"trailingComma": "es5",
			"semicolons": "always",
			"indentStyle": "space",
			"lineWidth": 100
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
