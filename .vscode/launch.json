  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Dev Tests",
      "preLaunchTask": "Build",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "args": [
        "--experimental-modules",
        "--experimental-specifier-resolution=node",
        "./dist/src/entrypoint.js",
        "test",
        "dev_test"
      ],
      "smartStep": true,
      "console": "integratedTerminal"
    }
  ]
}
