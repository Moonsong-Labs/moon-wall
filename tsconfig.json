{
  "exclude": ["tests", "moonwall.config*"],
  "compilerOptions": {
    "module": "ES2022",
    "baseUrl": ".",
    "target": "ES2021",
    "lib": ["ES2021"],
    "declaration": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"]
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "files": true,
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@moonwall": ["./src/cli/index.ts"]
      }
    }
  }
}
