{
  "compilerOptions": {
    "module": "CommonJS",
    "baseUrl": ".",
    "target": "ES2020",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "tests"],
  "ts-node": {
    "swc": true,
    "files": true,
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@moonwall": ["./src/cli/runner/index.ts"]
      }
    }
  }
}
