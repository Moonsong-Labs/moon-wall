{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./",
    "lib": ["ESNext"],
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false //renable this oneday
    // "paths": {
    //   "@moonwall/cli": ["./packages/cli/src/index.ts"],
    //   "@moonwall/util": ["./packages/util/src/index.ts"],
    // }
  },
  "include": ["packages/cli/src/**/*"],
  "exclude": [
    "./tests/**",
    "**/dist/**",
    "./packages/*/*.d.ts",
    "./packages/*/*.d.cts"
  ]
}
