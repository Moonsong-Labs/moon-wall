{
  "compilerOptions": {
    // "strict": true, renable this oneday
    // "strictNullChecks": true, renable this one day
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./",
    "lib": ["ESNext"],
    "declaration": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
    // "types": ["node", "vitest/globals"]
  },
  "exclude": ["tests", "moonwall.config*", "**/dist/**"],
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "files": true
  }
}
