{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "lib": ["ESNext"],
    "types": ["node"],
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "skipDefaultLibCheck": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "noImplicitAny": false // Remove this oneday
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./tests/**", "**/dist/**", "./packages/*/*.d.ts", "./packages/*/*.d.cts"]
}
