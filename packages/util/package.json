{
  "name": "@moonwall/util",
  "type": "module",
  "version": "4.0.8",
  "description": "Testing framework for the Moon family of projects",
  "author": "timbrinded",
  "license": "ISC",
  "homepage": "https://github.com/Moonsong-Labs/moonwall#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Moonsong-Labs/moonwall.git",
    "directory": "packages/util"
  },
  "bugs": {
    "url": "https://github.com/Moonsong-Labs/moonwall/issues"
  },
  "keywords": [
    "moonwall",
    "moonbeam",
    "moondance",
    "polkadot",
    "kusama",
    "substrate"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14.16.0",
    "pnpm": ">=7"
  },
  "files": [
    "dist",
    "bin",
    "*.d.ts",
    "*.d.cts",
    "*.mjs",
    "*.cjs"
  ],
  "scripts": {
    "clean": "pnpm rimraf dist && pnpm rimraf node_modules",
    "build": "pnpm exec rimraf dist && tsup src --format cjs,esm --config tsup.config.ts && pnpm generate-types",
    "generate-types": "tsup src --format cjs,esm --dts --config tsup.config.ts",
    "watch": "tsup src --format cjs,esm --dts --watch",
    "typecheck": "pnpm exec tsc --noEmit",
    "prepublish": "pnpm run build && pnpm run generate-types && pnpm typecheck"
  },
  "dependencies": {
    "@moonwall/types": "workspace:*",
    "@polkadot/util-crypto": "^12.3.2",
    "@types/debug": "^4.1.8",
    "@types/node": "^20.4.8",
    "@types/yargs": "^17.0.24",
    "bottleneck": "^2.19.5",
    "chalk": "^5.3.0",
    "clear": "^0.1.0",
    "cli-progress": "^3.12.0",
    "colors": "^1.4.0",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "inquirer": "^8.2.6",
    "inquirer-press-to-continue": "^1.2.0",
    "node-fetch": "^3.3.2",
    "prettier": "^2.8.8",
    "rlp": "^3.0.0",
    "semver": "^7.5.4",
    "viem": "^1.5.3",
    "vite": "^4.4.8",
    "vitest": "^0.34.1",
    "ws": "^8.13.0",
    "yaml": "^2.3.1",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "@moonbeam-network/api-augment": "^0.2400.0",
    "@polkadot/api": "^10.9.1",
    "@polkadot/api-augment": "^10.9.1",
    "@polkadot/api-derive": "^10.9.1",
    "@polkadot/keyring": "^12.3.2",
    "@polkadot/rpc-provider": "^10.9.1",
    "@polkadot/types": "^10.9.1",
    "@polkadot/types-codec": "^10.9.1",
    "@polkadot/util": "^12.3.2",
    "ethers": "^6.6.7",
    "web3": "4.0.3"
  },
  "devDependencies": {
    "@moonbeam-network/api-augment": "^0.2400.0",
    "@polkadot/api": "^10.9.1",
    "@polkadot/api-augment": "^10.9.1",
    "@polkadot/api-derive": "^10.9.1",
    "@polkadot/keyring": "^12.3.2",
    "@polkadot/rpc-provider": "^10.9.1",
    "@polkadot/types": "^10.9.1",
    "@polkadot/types-codec": "^10.9.1",
    "@polkadot/util": "^12.3.2",
    "@vitest/ui": "^0.34.1",
    "ethers": "^6.7.0",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "web3": "4.0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
