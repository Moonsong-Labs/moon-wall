{
  "name": "@moonwall/cli",
  "type": "module",
  "version": "0.5.12",
  "description": "Testing framework for the Moon family of projects",
  "author": "timbrinded",
  "license": "ISC",
  "homepage": "https://github.com/Moonsong-Labs/moonwall#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Moonsong-Labs/moonwall.git",
    "directory": "packages/moonwall"
  },
  "bugs": {
    "url": "https://github.com/Moonsong-Labs/moonwall/issues"
  },
  "keywords": [
    "moonwall",
    "moonbeam",
    "moondance",
    "polkadot",
    "kusama",
    "substrate"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "moonwall": "./moonwall.mjs"
  },
  "engines": {
    "node": ">=14.16.0",
    "pnpm": ">=7"
  },
  "files": [
    "dist",
    "bin",
    "*.d.ts",
    "*.d.cts",
    "*.mjs",
    "*.cjs"
  ],
  "scripts": {
    "build": "pnpm exec rimraf dist && tsup src --format cjs,esm --config tsup.config.ts",
    "generate-types": "tsup src --format cjs,esm --dts --config tsup.config.ts && pnpm schema",
    "watch": "tsup src --format cjs,esm --dts --watch",
    "typecheck": "pnpm exec tsc --noEmit",
    "prepublish": "pnpm run build && pnpm run generate-types && pnpm typecheck",
    "prepare": "pnpm build",
    "schema": "typescript-json-schema ./src/types/config.ts MoonwallConfig > config_schema.json",
    "compile": "pnpm build ",
    "lint": "tsc"
  },
  "dependencies": {
    "@acala-network/chopsticks": "^0.6.4",
    "@types/cli-progress": "^3.11.0",
    "@types/debug": "^4.1.7",
    "@types/node": "^18.16.3",
    "@types/yargs": "^17.0.24",
    "@zombienet/orchestrator": "^0.0.38",
    "bottleneck": "^2.19.5",
    "chalk": "^5.2.0",
    "clear": "^0.1.0",
    "cli-progress": "^3.12.0",
    "colors": "^1.4.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "inquirer": "^8.2.5",
    "inquirer-press-to-continue": "^1.1.4",
    "moonbeam-types-bundle": "^2.0.10",
    "node-fetch": "^3.3.1",
    "prettier": "^2.8.8",
    "semver": "^7.5.0",
    "superagent": "^8.0.9",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "vitest": "^0.31.0",
    "ws": "^8.13.0",
    "yaml": "^2.2.2",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "@moonbeam-network/api-augment": "^0.2301.0",
    "@moonwall/util": "workspace:*",
    "@polkadot/api": "^10.5.1",
    "@polkadot/api-augment": "^10.5.1",
    "@polkadot/api-derive": "^10.5.1",
    "@polkadot/keyring": "^12.1.2",
    "@polkadot/types": "^10.5.1",
    "@polkadot/types-codec": "^10.5.1",
    "@polkadot/util": "^12.1.2",
    "ethers": "^6.3.0",
    "web3": "4.0.1-rc.0",
    "web3-providers-ws": "4.0.1-rc.0"
  },
  "devDependencies": {
    "@moonbeam-network/api-augment": "^0.2301.0",
    "@moonwall/util": "workspace:*",
    "@polkadot/api": "^10.5.1",
    "@polkadot/api-augment": "^10.5.1",
    "@polkadot/api-derive": "^10.5.1",
    "@polkadot/keyring": "^12.1.2",
    "@polkadot/types": "^10.5.1",
    "@polkadot/types-codec": "^10.5.1",
    "@polkadot/util": "^12.1.2",
    "@vitest/ui": "^0.28.5",
    "ethers": "^6.3.0",
    "regenerator-runtime": "^0.13.11",
    "typescript": "^5.0.4",
    "typescript-json-schema": "^0.55.0",
    "web3": "4.0.1-rc.0",
    "web3-providers-ws": "4.0.1-rc.0"
  },
  "pnpm": {
    "overrides": {
      "@moonwall/util": "workspace:*",
      "@polkadot/rpc-provider": "$@moonwall/util",
      "@polkadot/util": "$@moonwall/util",
      "@polkadot/keyring": "$@moonwall/util",
      "@polkadot/api": "$@moonwall/util",
      "@polkadot/types": "$@moonwall/util"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
