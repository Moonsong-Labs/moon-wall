{
  "name": "@moonwall/types",
  "type": "module",
  "version": "4.0.15",
  "description": "Testing framework for the Moon family of projects",
  "author": "timbrinded",
  "license": "ISC",
  "homepage": "https://github.com/Moonsong-Labs/moonwall#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Moonsong-Labs/moonwall.git",
    "directory": "packages/types"
  },
  "bugs": {
    "url": "https://github.com/Moonsong-Labs/moonwall/issues"
  },
  "keywords": [
    "moonwall",
    "moonbeam",
    "moondance",
    "polkadot",
    "kusama",
    "substrate"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14.16.0",
    "pnpm": ">=7"
  },
  "files": [
    "dist",
    "bin",
    "*.d.ts",
    "*.d.cts",
    "*.mjs",
    "*.cjs"
  ],
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "build": "rm -rf dist && tsup src --format cjs,esm  && pnpm generate-types",
    "generate-types": "tsup src --format cjs,esm --dts  && pnpm schema && pnpm typecheck && pnpm format",
    "watch": "tsup src --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint './src/**/*.ts' --fix",
    "fmt": "pnpm prettier --write --ignore-path ../../.prettierignore '**/*.(yml|js|ts|json)'",
    "fmt:fix": "pnpm prettier --write --ignore-path ../../.prettierignore '**/*.(yml|js|ts|json)'",
    "prepublish": "pnpm run build && pnpm run generate-types",
    "schema": "typescript-json-schema --tsNodeRegister --esModuleInterop -o config_schema.json ./src/config.ts MoonwallConfig"
  },
  "dependencies": {
    "@polkadot/api": "^10.9.1",
    "@polkadot/api-base": "^10.9.1",
    "@polkadot/keyring": "^12.4.1",
    "@polkadot/types": "^10.9.1",
    "@polkadot/util": "^12.4.1",
    "@polkadot/util-crypto": "^12.4.1",
    "bottleneck": "^2.19.5",
    "debug": "^4.3.4",
    "ethers": "^6.7.1",
    "viem": "^1.6.4",
    "web3": "4.0.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "typescript-json-schema": "^0.59.0"
  }
}
